{
  "name": "@tokenbb/client",
  "version": "0.1.0",
  "private": true,
  "author": "Buildteam <reggaemuffin@buildteam.io>",
  "scripts": {
    "start": "npm run serve",
    "start_production": "node -v && node --harmony --experimental-modules --no-warnings server.mjs",
    "serve": "vue-cli-service serve --host 0.0.0.0 --port 3000",
    "build": "vue-cli-service build",
    "pretest": "eslint --ignore-path .gitignore .",
    "lint": "eslint --ignore-path .gitignore . --fix",
    "test": "npm run lint",
    "deploy": "bash scripts/deploy.sh lab",
    "postinstall": "vue-cli-service build && cp ./_secure-random.patch.js ./node_modules/secure-random/lib/secure-random.js"
  },
  "browser": {
    "request": "xhr"
  },
  "dependencies": {
    "@steemit/steem-js": "^0.7.2",
    "@vue/cli-service": "^3.0.3",
    "buefy": "^0.6.7",
    "bulma-extensions": "^3.0.0",
    "es6-promisify": "^6.0.0",
    "jwt-decode": "^2.2.0",
    "koa": "^2.6.2",
    "koa-no-cache": "^2.0.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "koa-static-cache": "^5.1.2",
    "mini-toastr": "^0.8.1",
    "moment": "^2.22.2",
    "register-service-worker": "^1.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sc2-sdk": "^1.1.0",
    "steem-networks": "^1.0.2",
    "steemconnect": "^2.0.1",
    "vue": "^2.5.17",
    "vue-notifications": "^0.9.0",
    "vue-router": "^3.0.1",
    "vue-sanitize": "^0.2.0",
    "vue2-editor": "^2.6.6",
    "vuex": "^3.0.1",
    "xhr": "^2.5.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.3",
    "@vue/cli-plugin-eslint": "^3.0.3",
    "@vue/cli-plugin-pwa": "^3.0.3",
    "@vue/eslint-config-standard": "^3.0.3",
    "dotenv": "^6.1.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "standard": "^12.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
